---
import Base from '../../layouts/Base.astro';
import { modulos } from '../../data/modulos';

export function getStaticPaths() {
  return modulos.map( modulo => ({params:{slug:modulo.url}, props:{data:modulo}}));
}

const {nombre, descripcion, url, img, caracteristicas} = Astro.props.data
// const { modulo } = Astro.params;
// console.log(url)
---

<Base title={nombre}>
  <section>
    <div class="mx-auto mb-20 py-8 max-w-screen-2xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:h-screen lg:grid-cols-2">
        <div class="relative z-10 lg:py-16">
          <div class="relative h-64 sm:h-80 lg:h-full">
            <img
              alt=""
              src={`/assets/img/${img}`}
              class="absolute inset-0 w-full h-full object-cover"
            />
          </div>
        </div>

        <div class="relative flex items-center bg-gray-100">
          <span
            class="hidden lg:absolute lg:inset-y-0 lg:-start-16 lg:block lg:w-16 lg:bg-gray-100"
          ></span>

          <div class="p-8 sm:p-16 lg:p-24">
            <h2 class="text-2xl font-black sm:text-3xl">
              {nombre}
            </h2>

            <p class="mt-4 text-gray-600">
              {descripcion}
            </p>


            <ul role="list" class="my-4 mx-0 space-y-4 text-left">
        
              {caracteristicas.map( caracteristica => (

                  <li class="flex items-center space-x-3">
                      <svg class="flex-shrink-0 w-5 h-5 text-green-500 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
                      <span class="text-gray-600">{caracteristica}</span>
                  </li>
              
                ))}
      
              
          </ul>

            <a
              href="/login"
              class="mt-8 inline-block rounded border border-indigo-600 bg-indigo-600 px-12 py-3 text-sm font-bold text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500 uppercase"
            >
              Obtener
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

</Base>