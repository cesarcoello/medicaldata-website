---
import Base from '../../layouts/Base.astro';
import { modulos } from '../../data/modulos';

export function getStaticPaths() {
  return modulos.map( modulo => ({params:{slug:modulo.url}, props:{data:modulo}}));
}

const {nombre, descripcion, url, img} = Astro.props.data
// const { modulo } = Astro.params;
// console.log(url)
---

<Base title={nombre}>
  <section>
    <div class="mx-auto max-w-screen-2xl px-4 py-16 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:h-screen lg:grid-cols-2">
        <div class="relative z-10 lg:py-16">
          <div class="relative h-64 sm:h-80 lg:h-full">
            <img
              alt=""
              src={`/assets/img/${img}`}
              class="absolute inset-0 w-full h-full object-cover"
            />
          </div>
        </div>

        <div class="relative flex items-center bg-gray-100">
          <span
            class="hidden lg:absolute lg:inset-y-0 lg:-start-16 lg:block lg:w-16 lg:bg-gray-100"
          ></span>

          <div class="p-8 sm:p-16 lg:p-24">
            <h2 class="text-2xl font-black sm:text-3xl">
              {nombre}
            </h2>

            <p class="mt-4 text-gray-600">
              {descripcion}
            </p>

            <a
              href="/login"
              class="mt-8 inline-block rounded border border-indigo-600 bg-indigo-600 px-12 py-3 text-sm font-bold text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500 uppercase"
            >
              Obtener
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

</Base>