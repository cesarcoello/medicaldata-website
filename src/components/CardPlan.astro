---
interface Props{
    nombre: string,
    descripcion: string,
    precio: string,
    caracteristicas: string[]
}

const { nombre, descripcion, precio, caracteristicas } = Astro.props
---
<div class="flex flex-col p-6 mx-auto max-w-lg text-center text-gray-900 bg-white rounded-lg border border-gray-100 shadow xl:p-8">
    <h3 class="mb-4 text-2xl font-semibold">{nombre}</h3>
    <p class="font-light text-gray-500 sm:text-lg">{descripcion}</p>
    <div class="flex justify-center items-baseline my-8">
        <span class="mr-2 text-5xl font-extrabold">L{precio}</span>
        <span class="text-gray-500">/mes</span>
    </div>
    <!-- List -->
    <ul role="list" class="mb-8 space-y-4 text-left">
        
        {caracteristicas.map( caracteristica => (
            <li class="flex items-center space-x-3">
                <svg class="flex-shrink-0 w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
                <span>{caracteristica}</span>
            </li>
        ))}

        
    </ul>
    <a href="/login" class="text-white bg-blue-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center uppercase mt-auto">Obtener</a>
</div>