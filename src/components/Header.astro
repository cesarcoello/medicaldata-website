---
import { type MenuOption } from '../interfaces/menuOption';

const menuOptions: MenuOption[] = [
  { nombre: 'Sobre Nosotros', url: '/nosotros' },
  { nombre: 'Productos', url: '/modulos' },
  { nombre: 'Planes', url: '/planes' },
];
---

<nav class="bg-white border-gray-200">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <span class="self-center text-2xl font-bold whitespace-nowrap text-blue-700">Medical<span class="font-black">Data</span></span>
    </a>
    <div class="flex md:hidden">
      <button id="menu-button" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200" aria-controls="mobile-menu" aria-expanded="false">
        <span class="sr-only">Open main menu</span>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15" />
        </svg>
      </button>
    </div>
    <div class="hidden w-full md:flex md:w-auto md:order-1" id="navbar-cta">
      <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white">
        {menuOptions.map(({ nombre, url }) => (
          <li>
            <a href={url} class="block py-2 px-3 md:p-0 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 font-bold uppercase">{nombre}</a>
          </li>
        ))}
        <li class="hidden md:flex justify-center">
          <a href="/login" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-bold rounded-lg text-sm px-4 py-2 text-center uppercase">
            Iniciar Sesión
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="hidden md:hidden" id="mobile-menu">
  <ul class="flex flex-col font-medium p-4 border border-gray-100 rounded-lg bg-gray-50">
    {menuOptions.map(({ nombre, url }) => (
      <li>
        <a href={url} class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 font-bold uppercase">{nombre}</a>
      </li>
    ))}
    <li class="flex justify-center">
      <a href="/login" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-bold rounded-lg text-sm px-4 py-2 text-center uppercase">
        Iniciar Sesión
      </a>
    </li>
  </ul>
</div>

<script lang="ts">
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    menuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  });
</script>
